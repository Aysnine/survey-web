
body
  font-family 'Microsoft YaHei', 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.tips
  padding 8px 16px
  background-color #ecf8ff
  border-radius 4px
  border-left 5px solid #50bfff
  margin 20px 0
  p, p&
    font-size 14px
    color #5e6d82
    line-height 1.5em

.survey-inner-list
  .el-form-item__label
    margin-top 20px
    color #909399
    font-weight bold
  .el-card
    border-color #dcdfe6
    background linear-gradient(135deg, #409eff 10px, #fff 0)
  .flag-select
    background linear-gradient(135deg, #00bcd4 10px, #fff 0)
  .flag-number
    background linear-gradient(135deg, #4caf50 10px, #fff 0)
  .flag-text
    background linear-gradient(135deg, #9c27b0 10px, #fff 0)

.flag-color-select
  color #00bcd4
.flag-color-number
  color #4caf50
.flag-color-text
  color #9c27b0

.no-label
  .el-radio
    line-height 32px // ! weird attribute
  .el-checkbox__label
  .el-radio__label
    display none

// ! weird element-ui table
.fix--1px
  margin-right 1px
.tite-dialog
  .el-dialog__body
    padding-top 0
    padding-bottom 0
